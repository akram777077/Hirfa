@{
    ViewData["Title"] = "Home";
}

<style>
    /* General Modern Styles */
    body {
        font-family: 'Poppins', 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Added Inter for a very modern feel */
        color: #495057; /* Softer black */
        line-height: 1.7;
        background-color: #fdfdfd; /* Very light off-white background */
        overflow-x: hidden;
    }

    h1, h2, h3, h4, h5, h6 {
        font-weight: 700;
        color: #212529; /* Darker, more standard heading color */
    }

    .section-padding {
        padding: 100px 0;
    }

    .bg-light-custom {
        background-color: #f8f9fa;
    }
    .bg-dark-subtle-custom { /* For a richer, premium feel section */
        background-color: #2c3e50; /* Dark blue-grey */
        color: #e9ecef;
    }
    .bg-dark-subtle-custom h2, .bg-dark-subtle-custom h3, .bg-dark-subtle-custom h4, .bg-dark-subtle-custom p {
        color: #e9ecef;
    }
    .bg-dark-subtle-custom .section-title h2::after {
        background: #fff; /* White underline on dark bg */
    }


    .btn-modern {
        border-radius: 8px; /* Slightly less rounded for a sharper look */
        font-weight: 600;
        text-transform: none; /* Often more modern than all-caps */
        letter-spacing: 0.2px;
        transition: all 0.35s cubic-bezier(0.25, 0.8, 0.25, 1); /* Smoother transition */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        padding: 14px 35px;
        font-size: 1rem;
    }

    .btn-modern-primary {
        background: linear-gradient(135deg, #5e25c7 0%, #2575fc 100%); /* Refined gradient */
        border: none;
        color: #fff;
    }
    .btn-modern-primary:hover {
        transform: translateY(-4px) scale(1.02);
        box-shadow: 0 8px 20px rgba(64, 106, 217, 0.3);
        color: #fff;
    }

    .btn-modern-light {
        background-color: #fff;
        border: 1px solid #dee2e6;
        color: #2575fc;
    }
    .btn-modern-light:hover {
        background-color: #f0f6ff;
        border-color: #2575fc;
        transform: translateY(-4px);
        box-shadow: 0 6px 15px rgba(37, 117, 252, 0.15);
        color: #2575fc;
    }
    
    .btn-modern-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
        color: #fff;
    }
    .btn-modern-danger:hover {
        background-color: #c0392b;
        border-color: #c0392b;
        transform: translateY(-4px);
        box-shadow: 0 6px 15px rgba(220, 53, 69, 0.25);
        color: #fff;
    }


    .text-gradient-primary {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: inline-block;
    }

    /* Hero Section Specific Styles */
    .hero-section {
        min-height: 100vh; /* Full viewport height */
        color: #fff;
        /* Example of using a high-quality image with a subtle overlay */
        background: linear-gradient(rgba(44, 62, 80, 0.6), rgba(37, 117, 252, 0.5)), url('/img/hero-background-abstract.jpg');
        /* === OR an animated gradient (more complex, example below) === */
        /* background: linear-gradient(-45deg, #6a11cb, #2575fc, #2c3e50, #3498db);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite; */
        background-size: cover;
        background-position: center center;
        display: flex; /* Ensure flex properties from parent are applied */
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden; /* For any ::before/::after effects */
    }
    /* @@keyframes gradientBG {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    } */

    .hero-content {
        max-width: 800px;
        z-index: 1; /* Above any pseudo elements */
    }

    .hero-section h1 {
        font-size: 4.2rem; /* Even larger */
        font-weight: 800; /* Bolder */
        text-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
        line-height: 1.2;
    }

    .hero-section p.lead {
        font-size: 1.5rem;
        font-weight: 300; /* Light for contrast with bold heading */
        margin-bottom: 3rem !important;
        text-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
        max-width: 650px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Section Title Styling */
    .section-title {
        margin-bottom: 70px;
        text-align: center;
    }
    .section-title h2 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 20px;
        position: relative;
        padding-bottom: 20px;
        color: #2c3e50;
    }
    .section-title h2::after {
        content: '';
        position: absolute;
        display: block;
        width: 70px; /* Shorter, thicker line */
        height: 5px;
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        border-radius: 3px;
    }
    .section-title p.subtitle { /* Specific class for subtitle */
        font-size: 1.15rem;
        color: #6c757d;
        max-width: 650px;
        margin: 0 auto;
        line-height: 1.8;
    }

    /* How It Works Section - SVG Icons */
    .how-it-works-step {
        text-align: center;
        padding: 25px;
    }
    .how-it-works-step .icon-container {
        width: 90px;
        height: 90px;
        border-radius: 20px; /* Squircle shape */
        background: linear-gradient(145deg, #f0f2ff, #cdd6ff); /* Softer gradient */
        color: #2575fc; /* Icon color */
        margin: 0 auto 25px auto;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 20px rgba(37, 117, 252, 0.15);
        transition: all 0.3s ease;
    }
    .how-it-works-step:hover .icon-container {
        transform: translateY(-5px) scale(1.05);
        box-shadow: 0 12px 25px rgba(37, 117, 252, 0.25);
    }
    .how-it-works-step .icon-container svg {
        width: 40px;
        height: 40px;
    }
    .how-it-works-step h4 {
        font-size: 1.4rem;
        margin-bottom: 10px;
        color: #343a40;
    }

    /* Features Section - Elevated Card Design */
    .feature-card {
        background-color: #fff;
        padding: 35px 30px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.07);
        transition: transform 0.35s cubic-bezier(0.25, 0.8, 0.25, 1), box-shadow 0.35s cubic-bezier(0.25, 0.8, 0.25, 1);
        text-align: left; /* Align text left for a more formal look */
        height: 100%;
        border: 1px solid #e9ecef;
    }
    .feature-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 18px 45px rgba(50,50,93,.12), 0 8px 15px rgba(0,0,0,.08);
    }
    .feature-card .icon-feature { /* Using a class for feature icons */
        display: inline-flex; /* To align with text if needed */
        align-items: center;
        justify-content: center;
        width: 60px;
        height: 60px;
        border-radius: 12px;
        background-color: #eaf2ff; /* Light blue bg */
        margin-bottom: 25px;
    }
    .feature-card .icon-feature svg {
        width: 28px;
        height: 28px;
        fill: #2575fc; /* SVG fill color */
    }
    .feature-card h4 {
        font-size: 1.3rem;
        margin-bottom: 12px;
        font-weight: 600;
    }
    .feature-card p {
        font-size: 0.95rem;
        color: #5a6268;
    }

    /* Join Us Section (Role Cards) - Premium Look */
    .role-card {
        background-color: #fff;
        border-radius: 16px;
        padding: 20px; /* Padding inside */
        box-shadow: 0 15px 35px rgba(50,50,93,.08), 0 5px 15px rgba(0,0,0,.07);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275); /* Bouncier transition */
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        overflow: hidden; /* For image fitting */
        border: 1px solid transparent; /* For hover border */
    }
    .role-card:hover {
        transform: translateY(-10px) scale(1.03);
        box-shadow: 0 20px 50px rgba(37, 117, 252, 0.2), 0 10px 20px rgba(0,0,0,0.1);
        border-color: #a1c4fd; /* Subtle border on hover */
    }
    .role-card .role-image-container {
        width: 100%;
        height: 180px; /* Fixed height for image consistency */
        margin-bottom: 20px;
        border-radius: 12px; /* Rounded corners for image area */
        overflow: hidden; /* Crucial for object-fit */
        background-color: #f0f4f8; /* Placeholder bg */
    }
    .role-card .role-image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Scales image to cover container, cropping if necessary */
        transition: transform 0.4s ease;
    }
    .role-card:hover .role-image-container img {
        transform: scale(1.08); /* Zoom image on hover */
    }
    .role-card .role-content {
        padding: 10px 15px 20px; /* Padding for text content below image */
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }
    .role-card h4 {
        font-size: 1.6rem;
        margin-bottom: 8px;
        color: #2c3e50;
        font-weight: 600;
    }
    .role-card p {
        font-size: 0.9rem;
        color: #555;
        margin-bottom: 25px;
        flex-grow: 1;
    }
    .role-card .btn-modern {
        width: 100%; /* Button takes full width of card content area */
        margin-top: auto; /* Pushes button to bottom */
    }

    /* Footer */
    .footer-modern {
        background-color: #212529; /* Darker footer */
        color: #ced4da;
        padding: 50px 0;
    }
    .footer-modern p {
        margin-bottom: 0;
        font-size: 0.9rem;
    }
    .footer-modern a {
        color: #2575fc;
        text-decoration: none;
        font-weight: 500;
    }
    .footer-modern a:hover {
        text-decoration: underline;
        color: #80aaff;
    }
    .footer-modern .fas.fa-heart { /* Example, if you keep Font Awesome for this */
        color: #e74c3c;
    }
    .footer-modern .svg-heart { /* If using SVG heart */
        width: 16px; height: 16px; vertical-align: middle; margin: 0 3px;
        fill: #e74c3c;
    }

    /* Responsive adjustments */
    @@media (max-width: 991px) {
        .hero-section h1 { font-size: 3.2rem; }
        .hero-section p.lead { font-size: 1.3rem; }
        .section-title h2 { font-size: 2.5rem; }
        .role-card { margin-bottom: 30px; }
    }
     @@media (max-width: 768px) {
        .section-padding { padding: 70px 0; }
        .hero-section { min-height: 80vh; }
        .hero-section h1 { font-size: 2.8rem; }
        .hero-section p.lead { font-size: 1.15rem; }
        .section-title h2 { font-size: 2.2rem; }
        .how-it-works-step .icon-container { width: 80px; height: 80px; }
        .how-it-works-step .icon-container svg { width: 35px; height: 35px; }
        .feature-card { text-align: center; padding: 30px 20px; } /* Center feature card content on mobile */
        .feature-card .icon-feature { margin-left: auto; margin-right: auto; }
    }
     @@media (max-width: 576px) {
        .hero-content .btn-modern { display: block; width: 90%; margin: 15px auto !important; }
        .role-card .role-image-container { height: 150px; }
        .role-card h4 { font-size: 1.4rem; }
    }
</style>

<!-- Hero Section -->
<div class="hero-section">
    <div class="text-center hero-content" data-aos="fade-up" data-aos-delay="100">
        <h1 class="fw-bold mb-4">Welcome to <span class="text-gradient-primary">Hirfa</span> Service Platform</h1>
        <p class="lead mb-5" data-aos="fade-up" data-aos-delay="300">Your ultimate destination to find, request, and manage services seamlessly. Connect with top professionals or offer your expertise to a vibrant community.</p>
        <div class="cta-buttons" data-aos="fade-up" data-aos-delay="500">
            <a asp-controller="Shared/Login" asp-action="Login" class="btn btn-modern btn-modern-light me-md-3 px-5 py-3">Login</a>
