            flex-direction: column;
            /* Ensure proper string termination */ 
            min-height: 100vh;
            /* Ensure proper string termination */ 
        }
        .main-content-area {
            flex-grow: 1; 
        }

        /* --- Modern Navbar Styles (Keep as is) --- */
        .navbar-modern { background-color: #2575fc !important; padding-top: 0.75rem; padding-bottom: 0.75rem; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06); position: fixed; top: 0; width: 100%; z-index: 1030; transition: background-color 0.3s ease; }
        .navbar-modern .navbar-brand { font-weight: 700; font-size: 1.4rem; color: #fff !important; }
        .navbar-modern .navbar-brand:hover { color: #f0f0f0 !important; }
        .navbar-modern .nav-link { color: rgba(255, 255, 255, 0.85) !important; font-weight: 500; font-size: 0.95rem; padding: 0.6rem 1rem; margin: 0 0.15rem; border-radius: 0.375rem; transition: color 0.2s ease, background-color 0.2s ease; }
        .navbar-modern .nav-link:hover, .navbar-modern .nav-link.active, .navbar-modern .nav-link.show { color: #ffffff !important; background-color: rgba(255, 255, 255, 0.12); }
        .navbar-modern .navbar-toggler { border-color: rgba(255, 255, 255, 0.2); }
        .navbar-modern .navbar-toggler-icon { background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(255, 255, 255, 0.85)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e"); }
        .navbar-modern .dropdown-menu { border-radius: 0.6rem; border: 1px solid #e9ecef; box-shadow: 0 10px 30px rgba(0,0,0,0.08); padding: 0.5rem 0; margin-top: 0.6rem !important; min-width: 220px; }
        .navbar-modern .dropdown-item { padding: 0.7rem 1.3rem; font-weight: 500; font-size: 0.9rem; color: #343a40; transition: background-color 0.2s ease, color 0.2s ease; display: flex; align-items: center; }
        .navbar-modern .dropdown-item .bi { margin-right: 0.75rem; font-size: 1.1rem; color: #6c757d; transition: color 0.2s ease; }
        .navbar-modern .dropdown-item:hover { background-color: #eaf2ff; color: #2575fc; }
/* Ensure proper closure of dropdown items */
        .navbar-modern .dropdown-item:hover .bi { color: #2575fc; }
        .navbar-modern .dropdown-item.text-danger { color: #dc3545 !important; }
        .navbar-modern .dropdown-item.text-danger .bi { color: #dc3545 !important; }
        .navbar-modern .dropdown-item.text-danger:hover { background-color: #f8d7da; color: #721c24 !important; }
/* Ensure proper closure of text-danger dropdown items */
        .navbar-modern .dropdown-item.text-danger:hover .bi { color: #721c24 !important; }
        .navbar-modern .dropdown-divider { margin: 0.6rem 0; border-top: 1px solid #e9ecef; }

        /* --- Modern Toast Notification Styles (Keep as is) --- */
