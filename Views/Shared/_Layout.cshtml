            letter-spacing: 0.8px;
            position: relative;
            padding-bottom: 0.5rem;
        }
        .footer-perfect h5.footer-heading::after { /* Underline effect for headings */
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            width: 30px;
            height: 2px;
            background-color: #2575fc; /* Primary color accent */
        }

        .footer-perfect .footer-links { list-style: none; padding-left: 0; }
        .footer-perfect .footer-links li { margin-bottom: 0.8rem; }
        .footer-perfect .footer-links a { color: #b0b0b0; text-decoration: none; transition: color 0.25s ease, transform 0.25s ease; display: inline-block; }
        .footer-perfect .footer-links a:hover { color: #ffffff; transform: translateX(3px); }
        .footer-perfect .footer-links a .bi { margin-right: 10px; font-size: 1em; opacity: 0.8; position: relative; top: 1px; }
        .footer-perfect .footer-links a:hover .bi { opacity: 1; }

