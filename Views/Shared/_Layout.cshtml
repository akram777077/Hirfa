        .footer-perfect .newsletter-form .form-control:focus {
            background-color: rgba(255, 255, 255, 0.08);
            border-color: #2575fc;
            box-shadow: 0 0 0 0.2rem rgba(37, 117, 252, 0.25);
            color: #fff;
        }
        .footer-perfect .newsletter-form .btn-primary {
            background-color: #2575fc;
            border-color: #2575fc;
            border-radius: 0 0.375rem 0.375rem 0;
            padding: 0.375rem 0.8rem; /* Match input height */
        }
         .footer-perfect .newsletter-form .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }

        .footer-perfect .copyright-section {
            font-size: 0.88rem;
            color: #888; 
            padding-top: 2rem;
            margin-top: 2rem; /* Ensure space above */
            border-top: 1px solid rgba(255, 255, 255, 0.1); 
        }
        .footer-perfect .copyright-section a { color: #b0b0b0; font-weight: 500; }
        .footer-perfect .copyright-section a:hover { color: #ffffff; }
        .footer-perfect .copyright-section .bi-heart-fill {
            color: #e74c3c; /* Red heart */
            position: relative;
            top: 2px; /* Align better with text */
        }

        /* Back to Top Button */
        #backToTopBtn {
            position: fixed;
            bottom: 25px;
            right: 25px;
            display: none; 
            z-index: 1000;
            width: 42px;
            height: 42px;
            font-size: 1.4rem; 
            line-height: 1;
            padding: 0;
            background-color: #2575fc;
            border-color: #2575fc;
            transition: opacity 0.3s ease, visibility 0.3s ease, transform 0.3s ease;
            opacity: 0.85;
        }
        #backToTopBtn:hover {
            opacity: 1;
            transform: scale(1.05);
             background-color: #0b5ed7;
            border-color: #0a58ca;
        }
        #backToTopBtn .bi { position: relative; top: 1px; }

    </style>
</head>
