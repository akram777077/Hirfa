<script>
    document.addEventListener("DOMContentLoaded", function() {
        // --- Navbar active link logic (Keep as is) ---
        const activePage = window.location.pathname;
        const navLinks = document.querySelectorAll('.navbar-modern .nav-link');
        let isHomeActive = (activePage === '/' || activePage.toLowerCase().startsWith('/home') || activePage.toLowerCase().startsWith('/index'));
        navLinks.forEach(link => { const linkUrl = new URL(link.href); const linkPath = linkUrl.pathname; const linkController = link.getAttribute('asp-controller'); const linkAction = link.getAttribute('asp-action'); if (activePage === linkPath || (activePage === '/' && linkController === 'Home' && linkAction === 'Index')) { link.classList.add('active'); isHomeActive = true; } else if (linkController === 'Home' && linkAction === 'Index' && isHomeActive && activePage === '/') { link.classList.add('active'); } else if (linkPath !== '/' && activePage.startsWith(linkPath) && (linkController !== 'Home' || linkAction !== 'Index' || !isHomeActive) ) { link.classList.add('active'); } });
        if (isHomeActive && !document.querySelector('.navbar-modern .nav-link.active[asp-controller="Home"][asp-action="Index"]')) { const homeLink = document.querySelector('.navbar-modern .nav-link[asp-controller="Home"][asp-action="Index"]'); if (homeLink) homeLink.classList.add('active'); }

        // --- Toast Initialization (Keep as is) ---
        var toastElList = [].slice.call(document.querySelectorAll('.toast-container-modern .toast'));
        var toastList = toastElList.map(function (toastEl) { var toastInstance = bootstrap.Toast.getInstance(toastEl); if (!toastInstance) { return new bootstrap.Toast(toastEl); } return toastInstance; });
        if (document.getElementById('errorToast') && '@TempData["ErrorToast"]'.length > 0) { (bootstrap.Toast.getInstance(document.getElementById('errorToast')) || new bootstrap.Toast(document.getElementById('errorToast'))).show(); }
        if (document.getElementById('successToast') && '@TempData["SuccessToast"]'.length > 0) { (bootstrap.Toast.getInstance(document.getElementById('successToast')) || new bootstrap.Toast(document.getElementById('successToast'))).show(); }
        if (document.getElementById('warningToast') && '@TempData["WarningToast"]'.length > 0) { (bootstrap.Toast.getInstance(document.getElementById('warningToast')) || new bootstrap.Toast(document.getElementById('warningToast'))).show(); }

        // --- Back to Top button logic ---
        const backToTopButton = document.getElementById("backToTopBtn");
        if (backToTopButton) { // Check if button exists
            window.onscroll = function() {
                if (document.body.scrollTop > 150 || document.documentElement.scrollTop > 150) {
                    backToTopButton.style.display = "block";
                    // Optional: fade in effect
                    // backToTopButton.style.opacity = "1"; 
                    // backToTopButton.style.visibility = "visible";
                } else {
                    backToTopButton.style.display = "none";
                     // Optional: fade out effect
                    // backToTopButton.style.opacity = "0";
                    // backToTopButton.style.visibility = "hidden";
                }
            };

            backToTopButton.addEventListener("click", function(e) {
                e.preventDefault();
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });
        }
    });
</script>

@await RenderSectionAsync("Scripts", required: false)
