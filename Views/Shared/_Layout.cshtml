        .toast-modern.text-bg-success { background-color: #198754 !important; color: #fff !important; }
        .toast-modern.text-bg-success .toast-icon, .toast-modern.text-bg-success .btn-close { color: #fff !important; filter: brightness(0) invert(1); }
