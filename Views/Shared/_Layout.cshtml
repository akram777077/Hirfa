    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Hirfa.Web.styles.css" asp-append-version="true"/>

    <style>
        /* Ensure all styles are properly closed */
        body {
            font-family: 'Poppins', 'Inter', sans-serif;
            padding-top: 75px; /* Must match navbar height */
            background-color: #f8f9fa; /* Slightly lighter than #f4f7f6, more standard bootstrap light */
