@model IEnumerable<Hirfa.Web.ViewModels.PrestataireDemandeListItemViewModel>
@{
    ViewData["Title"] = "Prestataire Demands";
    var statusFilter = Context.Request.Query["status"].ToString();
}
<div class="container">
    <h2 class="mb-4">Prestataire Demands</h2>
    <form method="get" class="mb-3">
        <div class="row g-2 align-items-center">
            <div class="col-auto">
                <label for="statusFilter" class="col-form-label">Filter by Status:</label>
            </div>
            <div class="col-auto">
                <select id="statusFilter" name="status" class="form-select" onchange="this.form.submit()">
                    @if (string.IsNullOrEmpty(statusFilter)) {
                        <option value="" selected>All</option>
                    } else {
                        <option value="">All</option>
                    }
                    @if (statusFilter == "pending") {
                        <option value="pending" selected>Pending</option>
                    } else {
                        <option value="pending">Pending</option>
                    }
                    @if (statusFilter == "valide") {
                        <option value="valide" selected>Valide</option>
                    } else {
                        <option value="valide">Valide</option>
                    }
                    @if (statusFilter == "non valide") {
                        <option value="non valide" selected>Non Valide</option>
                    } else {
                        <option value="non valide">Non Valide</option>
                    }
                </select>
            </div>
        </div>
    </form>
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Type of Service</th>
                <th>Status</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var d in Model.Where(d => string.IsNullOrEmpty(statusFilter) || d.Etat == statusFilter))
        {
            <tr>
                <td>@d.Prenom @d.Nom</td>
                <td>@d.Email</td>
                <td>@d.Typeservice</td>
                <td>
                    <span class="badge @(d.Etat == "pending" ? "bg-warning text-dark" : d.Etat == "valide" ? "bg-success" : d.Etat == "non valide" ? "bg-danger" : "bg-secondary")">@d.Etat</span>
                </td>
                <td>
                    <a asp-action="PrestataireDemandDetails" asp-route-id="@d.Iddemandeprestataire" class="btn btn-sm btn-outline-primary">View</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
