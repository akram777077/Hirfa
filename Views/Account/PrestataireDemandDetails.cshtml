@model Hirfa.Web.ViewModels.PrestataireDemandeDetailViewModel
@{
    ViewData["Title"] = "Prestataire Demand Details";
}
<div class="container">
    <h2 class="mb-4">Prestataire Demand Details</h2>
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">@Model.Prenom @Model.Nom</h5>
            <p class="card-text mb-1"><strong>Email:</strong> @Model.Email</p>
            <p class="card-text mb-1"><strong>Type of Service:</strong> @Model.Typeservice</p>
            <p class="card-text mb-1"><strong>Status:</strong> <span class="badge @(Model.Etat == "pending" ? "bg-warning text-dark" : Model.Etat == "valide" ? "bg-success" : Model.Etat == "non valide" ? "bg-danger" : "bg-secondary")">@Model.Etat</span></p>
            @if (Model.Etat == "non valide" && !string.IsNullOrWhiteSpace(Model.Reason)) {
                <p class="card-text mb-1"><strong>Reason:</strong> <span class="text-danger">@Model.Reason</span></p>
            }
            <p class="card-text mb-1"><strong>Date of Birth:</strong> @Model.Datenaissance?.ToString("yyyy-MM-dd")</p>
            <p class="card-text mb-1"><strong>Phone:</strong> @Model.Numtel</p>
            <p class="card-text mb-1"><strong>NIN:</strong> @Model.Nin</p>
            <p class="card-text mb-1"><strong>Address:</strong> @Model.Adresse</p>
            <p class="card-text mb-1"><strong>CV:</strong> @(string.IsNullOrEmpty(Model.Cv) ? "-" : Html.Raw($"<a href='/uploads/{Model.Cv}' target='_blank'>Download</a>"))</p>
            <p class="card-text mb-1"><strong>Criminal Record:</strong> @(string.IsNullOrEmpty(Model.Casierjudiciaire) ? "-" : Html.Raw($"<a href='/uploads/{Model.Casierjudiciaire}' target='_blank'>Download</a>"))</p>
        </div>
    </div>
    <h4>Diplomas</h4>
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Institution</th>
                <th>Type</th>
                <th>Year Obtained</th>
                <th>File</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var d in Model.Diplomes)
        {
            <tr>
                <td>@d.Institution</td>
                <td>@d.Type</td>
                <td>@d.Anneeobtention</td>
                <td>
                    @(string.IsNullOrEmpty(d.Fiche) ? "-" : Html.Raw($"<a href='/uploads/{d.Fiche}' target='_blank'>Download</a>"))
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a asp-action="PrestataireDemands" class="btn btn-secondary mt-3">Back to List</a>
    <div class="mt-3">
        <form asp-action="AcceptDemandePrestataire" method="post" class="d-inline">
            <input type="hidden" name="id" value="@Model.Iddemandeprestataire" />
            <button type="submit" class="btn btn-success">Valide</button>
        </form>
        <button type="button" class="btn btn-danger ms-2" data-bs-toggle="modal" data-bs-target="#reasonModal">Non Valide</button>
        <!-- Modal for entering reason -->
        <div class="modal fade" id="reasonModal" tabindex="-1" aria-labelledby="reasonModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form asp-action="RejectDemandePrestataire" method="post">
                        <div class="modal-header">
                            <h5 class="modal-title" id="reasonModalLabel">Reason for Non Valid</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="id" value="@Model.Iddemandeprestataire" />
                            <div class="mb-3">
                                <label for="reasonInput" class="form-label">Please enter the reason:</label>
                                <textarea class="form-control" id="reasonInput" name="reason" rows="3" required></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">OK</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
