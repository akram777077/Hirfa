@{
    ViewData["Title"] = "Prestataire Dashboard";
}

<h2>Prestataire Dashboard</h2>

<div class="card">
    <div class="card-header">
        Active Status
    </div>
    <div class="card-body">
        <form asp-action="ToggleActiveStatus" asp-controller="Prestataire" method="post">
            <button type="submit" class="btn @(Context.Session.GetString("IsActive") == "true" ? "btn-success" : "btn-danger")">
                @(Context.Session.GetString("IsActive") == "true" ? "Active" : "Non Active")
            </button>
        </form>
    </div>
</div>
