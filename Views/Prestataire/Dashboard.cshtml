@{
    ViewData["Title"] = "Prestataire Dashboard";
}
<div class="container mt-5">
    <h2>Welcome, Prestataire!</h2>
    <p>This is the prestataire dashboard. You are logged in as a service provider.</p>
</div>
<script>
    function confirmStatusChange(event) {
        event.preventDefault();
        const isActive = '@Context.Session.GetString("IsActive")' === 'True';
        if (!isActive) {
            document.getElementById("statusForm").submit();
            return;
        }

        const modal = document.getElementById("confirmationModal");
        const modalInstance = new bootstrap.Modal(modal);
        modalInstance.show();
    }

    function submitStatusChange() {
        document.getElementById("statusForm").submit();
    }
</script>

<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">Confirm Status Change</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to change your status to Non Active? This will reject all assigned demands.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="submitStatusChange()">Confirm</button>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        Active Status
    </div>
    <div class="card-body">
        <form id="statusForm" asp-action="ToggleActiveStatus" asp-controller="Prestataire" method="post">
            <button type="button" class="btn @(Context.Session.GetString("IsActive") == "True" ? "btn-success" : "btn-danger")" onclick="confirmStatusChange(event)">
                @(Context.Session.GetString("IsActive") == "True" ? "Active" : "Non Active")
            </button>
        </form>
    </div>
</div>
